:root
  --bg-color $bgColor
  --bgcolor $bgColor
  --bg-color-secondary $bgColorSecondary
  --bg-color-teritary $bgColorTeritary
  --bg-color-transparent $bgColorTransparent
  --box-shadow $boxShadow
  --box-shadow-color #f0f1f2
  --box-shadow-hover $boxShadowHover
  --text-color $textColor
  --text-color-sub $textColorSub
  --border-color $borderColor
  --border-color-sub $borderColorSub
  --code-color $codeColor
  --inline-code-text $inlineCodeText
  --inline-code-bg $inlineCodeBg
  --mask-color $maskColor
  --accent-color $accentColor
  --image-mask-color transparent
  [data-theme="dark"]
    --bg-color $bgColorDark
    --bgcolor #1e1e1e
    --bg-color-secondary $bgColorSecondaryDark
    --bg-color-teritary $bgColorTeritaryDark
    --bg-color-transparent $bgColorTransparentDark
    --box-shadow $boxShadowDark
    --box-shadow-color #0f0e0d
    --box-shadow-hover $boxShadowHoverDark
    --text-color $textColorDark
    --text-color-sub $textColorSubDark
    --border-color $borderColorDark
    --border-color-sub $borderColorSubDark
    --code-color $codeColorDark
    --inline-code-text $inlineCodeTextDark
    --inline-code-bg $inlineCodeBgDark
    --mask-color $maskColorDark
    --accent-color $accentColorDark
    --image-mask-color $darkColor3